<p>
  <b>Title:</b>
  <%= @topic.title %>
</p>

<p>
  <b>Body:</b>
  <%= @topic.body %>
</p>

<p>
  <b>Owner:</b>
  <%= @topic.owner.name %>
</p>

<p>
  <b>To:</b>
  <%= @topic.addressee.identity_value %>
  <b>via:</b>  
  <%= @topic.addressee.identity_type %>
</p>

<p />
<!-- 		 -->
<!-- Replies -->
<!-- 		 -->
<% unless @topic.replies.first.body.blank? %>
<h2>Replies</h2>
<table>
	<tr>
		<td></td>
		<td>It was like...</td>
	</tr>
<% @topic.replies.each do |reply| %>
	<tr>
		<td>
		<% unless reply.body.blank? %>
			<% if reply.public? %>
				Everybody knows:
			<% else %>
				Shhh...
			<% end %>
		<% end %>			
		</td>
		<td><%= reply.body %></td>
	</tr>	
<% end %>
</table>
<% end %>

<h2>You can always try to have the last say...</h2>
<%= render 'replies/form' %>

<%= link_to 'Back', user_path(current_user) %>
